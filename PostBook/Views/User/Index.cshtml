@model IEnumerable<PostBook.DomainObjects.User>
@{
    ViewData["Title"] = "User Page";
    var userName = User.Identity.Name;
}



<div class="jumbotron bg-light">
    <h2 class="text-center text-primary">
        <i class="fab fa-facebook-messenger"></i>&nbsp; Users
    </h2>

    <div class="row">
        <div class="col-md-12" id="user">
            @if (Model != null)
            {
                @foreach (var user in Model.OrderBy(m => m.UserName))
                {
                    <div class="row">
                        <div>
                            <div class= "bg-light">
                                <p>@user.UserName</p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

</div>
@if (User.Identity.IsAuthenticated)
{
    <script>
        const userName = "@ViewBag.CurrentUserName";
    </script>
}


